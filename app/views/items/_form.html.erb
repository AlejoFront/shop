<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(item) do |f| %>
        <% if item.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

            <ul>
            <% item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.text_field :code, autofocus: true, placeholder: "Código", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :description, placeholder: "Descripción", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.collection_select :brand_id, Brand.all, :id, :name, {selected: @item.brand_id, include_blank: 'Seleccione Marca'}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.collection_select :unit_id, Unit.all, :id, :name, {selected: @item.unit_id, include_blank: 'Seleccione Unidad'}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.number_field :stock, placeholder: "Stock", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.number_field :min_stock, placeholder: "Stock Mínimo", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.collection_select :category_id, Category.all, :id, :name, {selected: @item.category_id, include_blank: 'Seleccione Categoría'}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.text_field :price, placeholder: "Precio", class: "form-control" %>
        </div>

        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

